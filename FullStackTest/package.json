{
  "name": "blog-platform-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix client run dev",
    "start": "npm-run-all --parallel start:server start:client",
    "start:server": "npm --prefix server start",
    "start:client": "npm --prefix client run preview",
    "setup": "npm install && npm --prefix server install && npm --prefix client install",
    "postinstall": "npm install --prefix server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
